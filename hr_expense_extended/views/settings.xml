<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.expense</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="85"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='hr_expense']" position="inside">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Approver 1</span>
                                <div class="text-muted">
                                    First user approver.
                                </div>
                                <div class="text-muted">
                                    <field name="approver_1"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Activity type to create</span>
                                <div class="text-muted">
                                    Activity type created when expense report submmited.
                                </div>
                                <div class="text-muted">
                                    <field name="activity_type_to_create"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Approver 2</span>
                                <div class="text-muted">
                                    Second user approver.
                                </div>
                                <div class="text-muted">
                                    <field name="approver_2"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Note</span>
                                <div class="text-muted">
                                    Note added in schedule activity created when expense report submmited.
                                </div>
                                <div class="text-muted">
                                    <field name="note"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
        
  </data>
</odoo>