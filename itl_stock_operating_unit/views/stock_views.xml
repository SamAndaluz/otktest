<odoo>
    <data>

        <record id="itl_view_warehouse" model="ir.ui.view">
            <field name="name">itl.stock.warehouse</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock_operating_unit.view_warehouse"/>
            <field name="arch" type="xml">
                <field name="operating_unit_id" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>
        
        <record id="itl_view_location_form" model="ir.ui.view">
            <field name="name">itl.stock.location.form</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock_operating_unit.view_location_form"/>
            <field name="arch" type="xml">
                <field name="operating_unit_id" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
            </field>
        </record>
            
        
    </data>
</odoo>