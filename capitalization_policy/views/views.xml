<odoo>
  <data>
    <record model="ir.ui.view" id="view_company_form_xml_import_extended">
      <field name="name">view_company_form_xml_import_extended</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form"/>
      <field name="arch" type="xml">
        <xpath expr="//notebook/page[@name='xml_import_data']" position='after'>
          <page name='capitalization_policy' string='Capitalization policy'>
              <group>
                  <group>
                      <field name="capitalization_policy"/>
                  </group>
                  <group></group>
              </group>
          </page>
        </xpath>
      </field>
    </record>

  </data>
</odoo>